<Alloy>
	<Window onOpen="init">
		<View id="content">
			<ListView id="descView">
				
				<HeaderView>
                    <View id="header">
                        <ImageView id="mangaImg" />
                        <View layout="horizontal" left="100dp">
                            <Label id="author" class="authorSection" />
                            <Label id="year" class="authorSection" />
                            <Label id="status" class="authorSection" />
                        </View>
                        <View id="bottomLine" />
                    </View>
				</HeaderView>
				
				<Templates>
	
	                <ItemTemplate name="description">
	                    <Label bindId="info" class="text" />
	                </ItemTemplate>
	
	            </Templates>
				
				<ListSection id="description">
					<HeaderView>
						<Label class="header">Description:</Label>
					</HeaderView>
				</ListSection>
				<ListSection id="chapters">
					<HeaderView>
						<Label class="header">Chapters:</Label>
					</HeaderView>
				</ListSection>
			</ListView>
		</View>
		<ActivityIndicator id="activityIndicator" />
	</Window>
</Alloy>